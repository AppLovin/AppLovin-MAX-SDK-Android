<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:name=".GlobalApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name="com.applovin.enterprise.apps.demoapp.SplashActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:launchMode="singleTask"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.applovin.enterprise.apps.demoapp.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.applovin.enterprise.apps.demoapp.ads.max.banner.BannerAdActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:label="Banners"
            android:parentActivityName="com.applovin.enterprise.apps.demoapp.MainActivity" />
        <activity
            android:name="com.applovin.enterprise.apps.demoapp.ads.max.banner.ProgrammaticBannerAdActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:parentActivityName="com.applovin.enterprise.apps.demoapp.MainActivity" />
        <activity
            android:name="com.applovin.enterprise.apps.demoapp.ads.max.banner.LayoutEditorBannerAdActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:parentActivityName="com.applovin.enterprise.apps.demoapp.MainActivity" />
        <activity
            android:name="com.applovin.enterprise.apps.demoapp.ads.max.banner.JetpackComposeBannerAdActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:parentActivityName="com.applovin.enterprise.apps.demoapp.MainActivity" />
        <activity
            android:name="com.applovin.enterprise.apps.demoapp.ads.max.mrecs.MrecAdActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:label="MRECs"
            android:parentActivityName="com.applovin.enterprise.apps.demoapp.MainActivity" />
        <activity
            android:name="com.applovin.enterprise.apps.demoapp.ads.max.mrecs.LayoutEditorMrecAdActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:parentActivityName="com.applovin.enterprise.apps.demoapp.MainActivity" />
        <activity
            android:name="com.applovin.enterprise.apps.demoapp.ads.max.mrecs.ProgrammaticMrecAdActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:parentActivityName="com.applovin.enterprise.apps.demoapp.MainActivity" />
        <activity
            android:name="com.applovin.enterprise.apps.demoapp.ads.max.mrecs.RecyclerViewMrecAdActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:parentActivityName="com.applovin.enterprise.apps.demoapp.MainActivity" />
        <activity
            android:name="com.applovin.enterprise.apps.demoapp.ads.max.mrecs.JetpackComposeMrecAdActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:parentActivityName="com.applovin.enterprise.apps.demoapp.MainActivity" />
        <activity
            android:name="com.applovin.enterprise.apps.demoapp.ads.max.InterstitialAdActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:parentActivityName="com.applovin.enterprise.apps.demoapp.MainActivity" />
        <activity
            android:name="com.applovin.enterprise.apps.demoapp.ads.max.AppOpenAdActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:parentActivityName="com.applovin.enterprise.apps.demoapp.MainActivity" />
        <activity
            android:name="com.applovin.enterprise.apps.demoapp.ads.max.RewardedAdActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:parentActivityName="com.applovin.enterprise.apps.demoapp.MainActivity" />
        <activity
            android:name="com.applovin.enterprise.apps.demoapp.ads.max.nativead.NativeAdActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:label="Natives"
            android:parentActivityName="com.applovin.enterprise.apps.demoapp.MainActivity" />
        <activity
            android:name="com.applovin.enterprise.apps.demoapp.ads.max.nativead.ManualNativeAdActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:parentActivityName="com.applovin.enterprise.apps.demoapp.MainActivity" />
        <activity
            android:name="com.applovin.enterprise.apps.demoapp.ads.max.nativead.ManualNativeLateBindingAdActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:parentActivityName="com.applovin.enterprise.apps.demoapp.MainActivity" />
        <activity
            android:name="com.applovin.enterprise.apps.demoapp.ads.max.nativead.RecyclerViewNativeAdActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:parentActivityName="com.applovin.enterprise.apps.demoapp.MainActivity" />
    </application>
</manifest>