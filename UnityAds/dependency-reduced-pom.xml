<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>com.applovin.mediation</groupId>
    <artifactId>unityads-adapter</artifactId>
    <name>unityads-adapter</name>
    <version>2.3.0.0</version>
    <description>UnityAds SDK Adapter</description>
    <build>
        <sourceDirectory>src/main/java</sourceDirectory>
        <plugins>
            <plugin>
                <artifactId>maven-shade-plugin</artifactId>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>shade</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <artifactId>maven-compiler-plugin</artifactId>
            </plugin>
            <plugin>
                <artifactId>maven-jar-plugin</artifactId>
                <configuration>
                    <archive>
                        <addMavenDescriptor>false</addMavenDescriptor>
                    </archive>
                </configuration>
            </plugin>
        </plugins>
    </build>
    <repositories>
        <repository>
            <id>AppLovin-Android-Stubs-repository</id>
            <url>http://maven.dev-alcfd.com/nexus/content/repositories/thirdparty/</url>
        </repository>
        <repository>
            <id>AppLovin-3rd-Party-SDKs-repository</id>
            <url>http://maven.dev-alcfd.com/nexus/content/repositories/thirdparty_sdk/</url>
        </repository>
        <repository>
            <releases />
            <snapshots />
            <id>sonatype-repository</id>
            <url>http://repository.sonatype.org/content/groups/public</url>
        </repository>
    </repositories>
    <dependencies>
        <dependency>
            <groupId>com.applovin</groupId>
            <artifactId>applovin-sdk</artifactId>
            <version>9.0.0</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>com.android</groupId>
            <artifactId>full</artifactId>
            <version>25.0.0</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>com.android</groupId>
            <artifactId>support-annotations</artifactId>
            <version>27.1.1</version>
            <scope>provided</scope>
        </dependency>
    </dependencies>
    <distributionManagement>
        <repository>
            <id>bintray-applovin-Android-Adapters</id>
            <name>applovin-Android-Adapters</name>
            <url>https://api.bintray.com/maven/applovin/Android-Adapters/${project.name}/;publish=1</url>
        </repository>
    </distributionManagement>
</project>
